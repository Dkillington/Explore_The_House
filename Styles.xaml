<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<!-- For all buttons, have cursor change over it -->
	<Style TargetType="Button">
		<Setter Property="Cursor" Value="Hand"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True"></Trigger>
		</Style.Triggers>
	</Style>

	<!-- Style for Selection Buttons -->
	<Style  x:Key="Selection" TargetType="Button">
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="Opacity" Value="0"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="0"></Setter>
		<Setter Property ="Background" Value ="Transparent"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True"></Trigger>
		</Style.Triggers>
	</Style>

    <!-- Style for Clue Buttons -->
    <Style  x:Key="Clue" TargetType="Button">
        <Setter Property="Cursor" Value="Help"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="0"></Setter>
        <Setter Property ="Background" Value ="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True"></Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>